<h2>Listado de Ventas</h2>

<table>
    <thead>
        <tr>
            <th>ID Venta</th>
            <th>Cliente</th>
            <th>Productos</th>
            <th>Fecha</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
       <% ventas.forEach(venta => { %>
    <tr>
        <td><%= venta.id %></td>
        <td><%= venta.Usuario.nombre %></td>
        <td>
            <ul>
                <% venta.VentaProductos.forEach(producto => { %>
                    <li><%= producto.productoTipo %> ID: <%= producto.productoId %> (x<%= producto.cantidad %>)</li>
                <% }) %>
            </ul>
        </td>
        <td><%= new Date(venta.createdAt).toLocaleString() %></td>
        <td>$<%= venta.total %></td>
    </tr>
<% }) %>

    </tbody>
</table>

